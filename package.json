{
  "private": true,
  "name": "anima-beyond-foundry",
  "version": "1.15.1",
  "description": "Unofficial Anima Beyond Fantasy system for Foundry VTT",
  "scripts": {
    "dev": "npx nodemon",
    "build": "npm run build:com && npm run copy:files && npm run copy:prod-system",
    "build:dev": "npm run build:com && npm run copy:files && npm run copy:dev-system && node scripts/appendSystemName.js animabf-dev && node scripts/copyDirectoryToFoundrySystem.js animabf-dev",
    "build:prod": "npm run build && node scripts/appendSystemName.js animabf && node scripts/copyDirectoryToFoundrySystem.js animabf",
    "build:com": "rimraf dist/ && npm run build:ts && npm run build:sass && npm run build:template",
    "build:ts": "tsc-esm -p .",
    "build:sass": "sass src/scss/animabf.scss dist/animabf.css",
    "build:template": "node ./scripts/buildTemplate.js",
    "copy:dev-system": "cp src/system.development.json dist/system.json",
    "copy:prod-system": "cp src/system.json dist/system.json",
    "copy:files": "cp src/template.json dist && cp -r src/lang dist && cp -r src/templates dist && cp -r src/assets dist && cp -r src/packs dist",
    "clean": "rimraf dist/",
    "package": "gulp package --release",
    "publish": "gulp publish --release",
    "test": "jest src",
    "hook:pre-commit": "lint-staged",
    "cypress:open": "cd integration && cypress open"
  },
  "engines": {
    "node": ">18.0.0"
  },
  "author": "",
  "license": "",
  "devDependencies": {
    "@digitak/tsc-esm": "^3.1.4",
    "@league-of-foundry-developers/foundry-vtt-types": "^9.268.0",
    "@types/faker": "^5.5.6",
    "@types/jest": "^26.0.23",
    "@typescript-eslint/eslint-plugin": "^4.25.0",
    "@typescript-eslint/parser": "^4.25.0",
    "archiver": "^5.3.0",
    "chalk": "^4.1.0",
    "cypress": "^7.5.0",
    "eslint": "^7.27.0",
    "eslint-config-airbnb": "^18.2.1",
    "eslint-config-airbnb-typescript": "^12.3.1",
    "eslint-config-prettier": "^8.3.0",
    "eslint-plugin-cypress": "^2.11.3",
    "eslint-plugin-import": "^2.23.3",
    "eslint-plugin-prettier": "^3.4.0",
    "faker": "^5.5.3",
    "fs-extra": "^9.1.0",
    "gulp": "^4.0.2",
    "gulp-dart-sass": "^1.0.2",
    "gulp-git": "^2.10.1",
    "gulp-less": "^4.0.1",
    "gulp-sass": "^4.1.0",
    "gulp-typescript": "^6.0.0-alpha.1",
    "husky": "^6.0.0",
    "jest": "^26.6.3",
    "json-stringify-pretty-compact": "^3.0.0",
    "lint-staged": "^11.0.0",
    "node-sass": "^5.0.0",
    "prettier": "^2.3.0",
    "readline-sync": "^1.4.10",
    "rimraf": "^3.0.2",
    "sass": "^1.32.8",
    "sass-lint": "^1.13.1",
    "ts-jest": "^26.5.6",
    "typescript": "^4.9.5",
    "vite": "^4.1.4",
    "vite-plugin-static-copy": "^0.13.1",
    "yargs": "^16.2.0"
  },
  "dependencies": {
    "jquery": "^3.6.0"
  },
  "lint-staged": {
    "src/**/*.ts": "eslint --fix --cache",
    "src/**/*.{ts,tsx}": [
      "bash -c \"tsc --noEmit --pretty\""
    ]
  },
  "sasslintConfig": "./.sass-lint.yml"
}
