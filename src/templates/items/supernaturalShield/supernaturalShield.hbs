{{#> "systems/animabf/templates/items/base/base-sheet.hbs"}}
  {{#> "systems/animabf/templates/common/ui/group.hbs"
    class="supernatural-shield-item-dialog"
  }}
    {{#> "systems/animabf/templates/common/ui/group-header.hbs"}}
      <div class='supernatural-shield-header'>
        {{>
        "systems/animabf/templates/common/ui/horizontal-titled-input.hbs"
          class="name"
          hideTitle=true
          inputType="text"
          inputName=(concat "name")
          inputValue=item.name
        }}
      </div>
    {{/"systems/animabf/templates/common/ui/group-header.hbs"}}
    {{#> "systems/animabf/templates/common/ui/group-body.hbs"
      class="supernatural-shield-item-dialog"
    }}
    
      {{#> 'systems/animabf/templates/common/ui/custom-select.hbs'
        class="type"
        title=(localize "anima.ui.combat.supernaturalShields.type.title")
        isVertical=true
        inputName='system.type'
      }}
        <option {{#if (is "eq" system.type 'none')}}selected{{/if}} value='none'>-</option>
        <option {{#if (is "eq" system.type 'mystic')}}selected{{/if}} value='mystic'>{{localize 'anima.ui.combat.supernaturalShields.type.mystic.title'}}</option>
        <option {{#if (is "eq" system.type 'psychic')}}selected{{/if}} value='psychic'>{{localize 'anima.ui.combat.supernaturalShields.type.psychic.title'}}</option>
      {{/'systems/animabf/templates/common/ui/custom-select.hbs'}}

      {{#if (is 'eq' system.type 'mystic')}}
        {{#> 'systems/animabf/templates/common/ui/custom-select.hbs'
          title=(localize 'dialogs.spellGrade.title')
          isVertical=true
          inputName='system.spellGrade'
        }}
          <option {{#if (is "eq" system.spellGrade 'base')}}selected{{/if}} value='base'>{{localize 'dialogs.spellGrade.base.title'}}</option>
          <option {{#if (is "eq" system.spellGrade 'intermediate')}}selected{{/if}} value='intermediate'>{{localize 'dialogs.spellGrade.intermediate.title'}}</option>
          <option {{#if (is "eq" system.spellGrade 'advanced')}}selected{{/if}} value='advanced'>{{localize 'dialogs.spellGrade.advanced.title'}}</option>
          <option {{#if (is "eq" system.spellGrade 'arcane')}}selected{{/if}} value='arcane'>{{localize 'dialogs.spellGrade.arcane.title'}}</option>
        {{/'systems/animabf/templates/common/ui/custom-select.hbs'}}  
      {{/if}}
      {{>
      "systems/animabf/templates/common/ui/vertical-titled-input.hbs"
        class="shieldPoints"
        title=(localize "anima.ui.combat.supernaturalShields.shieldPoints.title")
        inputName="system.shieldPoints"
        inputValue=system.shieldPoints
      }}
    {{/"systems/animabf/templates/common/ui/group-body.hbs"}}
  {{/"systems/animabf/templates/common/ui/group.hbs"}}
{{/"systems/animabf/templates/items/base/base-sheet.hbs"}}
