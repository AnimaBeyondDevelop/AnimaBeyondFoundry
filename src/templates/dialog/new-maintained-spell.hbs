<form>
  <div class='form-group'>
    <div>
    {{#> 'systems/animabf/templates/common/ui/custom-select.hbs'
      title=(localize 'dialogs.spell.title')
      inputName='new.maintainedSpell.id'
    }}
      {{#each data.actor.system.mystic.spells}}
        {{#if (and (is 'eq' this.system.hasDailyMaintenance.value false) (is 'neq' this.system.grades.advanced.maintenanceCost.value 'No') )}}
          <option value='{{this._id}}'>{{this.name}}</option>
        {{/if }}
      {{/each}}
    {{/'systems/animabf/templates/common/ui/custom-select.hbs'}}

    {{#> 'systems/animabf/templates/common/ui/custom-select.hbs'
      title=(localize 'dialogs.spellGrade.title')
      inputName='new.maintainedSpell.grade'
    }}
      <option value='base'>{{localize 'dialogs.spellGrade.base.title'}}</option>
      <option value='intermediate'>{{localize 'dialogs.spellGrade.intermediate.title'}}</option>
      <option value='advanced'>{{localize 'dialogs.spellGrade.advanced.title'}}</option>
      <option value='arcane'>{{localize 'dialogs.spellGrade.arcane.title'}}</option>
    {{/'systems/animabf/templates/common/ui/custom-select.hbs'}}
    </div>
  </div>
  <div class='columns'>
    <div>
      {{>
      "systems/animabf/templates/common/ui/horizontal-titled-input.hbs"
      title=(localize 'anima.ui.mystic.maintainedSpells.innate.title')
      inputType="checkbox"
      inputName="new.maintainedSpell.innate"
      inputValue=false
      }}
    </div>
  </div>
</form>