<form>
  <div class='form-group'>
    <div>
    {{#> 'systems/animabf/templates/common/ui/custom-select.hbs'
      title=(localize 'dialogs.spell.title')
      inputName='new.mysticShield.id'
    }}
      {{#each_when data.actor.system.mystic.spells "system" "spellType" "value" "defense"}}
        <option {{#if (is "eq" this._id ../data.mystic.spellUsed)}}selected{{/if}} value='{{this._id}}'>{{this.name}}</option>
      {{/each_when}}
    {{/'systems/animabf/templates/common/ui/custom-select.hbs'}}

    {{#> 'systems/animabf/templates/common/ui/custom-select.hbs'
      title=(localize 'dialogs.spellGrade.title')
      inputName='new.mysticShield.grade'
    }}
      <option {{#if (is "eq" data.mystic.spellGrade 'base')}}selected{{/if}} value='base'>{{localize 'dialogs.spellGrade.base.title'}}</option>
      <option {{#if (is "eq" data.mystic.spellGrade 'intermediate')}}selected{{/if}} value='intermediate'>{{localize 'dialogs.spellGrade.intermediate.title'}}</option>
      <option {{#if (is "eq" data.mystic.spellGrade 'advanced')}}selected{{/if}} value='advanced'>{{localize 'dialogs.spellGrade.advanced.title'}}</option>
      <option {{#if (is "eq" data.mystic.spellGrade 'arcane')}}selected{{/if}} value='arcane'>{{localize 'dialogs.spellGrade.arcane.title'}}</option>
    {{/'systems/animabf/templates/common/ui/custom-select.hbs'}}
    </div>
  </div>
<div class='columns'>
  <div>
    {{>
    "systems/animabf/templates/common/ui/horizontal-titled-input.hbs"
    title=(localize 'macros.combat.dialog.castInnate.title')
    inputType="checkbox"
    inputName="new.mysticShield.castInnate"
    inputValue=(is 'eq' data.mystic.castInnate true)
    }}
  </div>
</div>
<div class='columns'>
  <div>
    {{>
    "systems/animabf/templates/common/ui/horizontal-titled-input.hbs"
    title=(localize 'macros.combat.dialog.castPrepared.title')
    inputType="checkbox"
    inputName="new.mysticShield.castPrepared"
    inputValue=(is 'eq' data.mystic.castPrepared true)
    }}
  </div>
</div>
</form>