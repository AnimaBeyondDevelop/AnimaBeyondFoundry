<div class='{{cssClass}} combat-request'>
  <p class='label title'>
    {{concat this.system.attacker.name (localize 'macros.combat.dialog.requestPermission.title') this.system.defender.name}}
  </p>
  <div class='combatants'>
    {{#> "systems/animabf/templates/common/ui/group.hbs"
      class="attack-values"
    }}
      {{>
      "systems/animabf/templates/common/ui/group-header.hbs"
        title="Attacker"
      }}
      {{#> "systems/animabf/templates/common/ui/group-body.hbs"
        class="attack-values"
      }}
        <div class='combatant-profile'>
          <div class='image'>
            <img src='{{this.system.attacker.img}}' data-edit='img' title='{{this.system.attacker.name}}' />
          </div>
          <p class='label name'>
            {{this.system.attacker.name}}
          </p>
        </div>
      {{/"systems/animabf/templates/common/ui/group-body.hbs"}}
    {{/"systems/animabf/templates/common/ui/group.hbs"}}

    <div class='versus-label'>
      <p class='label'>VS</p>
    </div>

    {{#> "systems/animabf/templates/common/ui/group.hbs"
      class="defender-values"
    }}
      {{>
      "systems/animabf/templates/common/ui/group-header.hbs"
        title="Defender"
      }}
      {{#> "systems/animabf/templates/common/ui/group-body.hbs"
        class="defender-values"
      }}
        <div class='combatant-profile'>
          <div class='image'>
            <img src='{{this.system.defender.img}}' data-edit='img' title='{{this.system.defender.name}}' />
          </div>
          <p class='label name'>
            {{this.system.defender.name}}
          </p>
        </div>
      {{/"systems/animabf/templates/common/ui/group-body.hbs"}}
    {{/"systems/animabf/templates/common/ui/group.hbs"}}
  </div>
</div>
