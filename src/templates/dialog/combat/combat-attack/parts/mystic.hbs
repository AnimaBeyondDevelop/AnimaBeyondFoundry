{{>
"systems/animabf/templates/common/ui/horizontal-titled-input.hbs"
  title=(localize "macros.combat.dialog.zeonAccumulated.title")
  disabled=true
  inputName="attacker.mystic.spellCasting.zeon.accumulated"
  inputValue=this.attacker.mystic.spellCasting.zeon.accumulated
}}

{{>
"systems/animabf/templates/common/ui/horizontal-titled-input.hbs"
  title=(localize 'macros.combat.dialog.modifier.title')
  disabled=this.attackSent
  inputName="attacker.mystic.modifier"
  inputValue=this.attacker.mystic.modifier
}}

{{> 'systems/animabf/templates/common/ui/horizontal-titled-input.hbs'
  title=(localize 'macros.combat.dialog.magicProjection.title')
  disabled=this.attackSent
  inputName='attacker.mystic.magicProjection.final'
  inputValue=this.attacker.mystic.magicProjection.final
}}

{{#> 'systems/animabf/templates/common/ui/custom-select.hbs'
  title=(localize 'macros.combat.dialog.spell.title')
  disabled=this.attackSent
  inputName='attacker.mystic.spellUsed'
}}
  {{#each_when this.attacker.actor.system.mystic.spells "system" "combatType" "value" "attack"}}
    <option {{#if (is "eq" this._id ../this.attacker.mystic.spellUsed)}}selected{{/if}} value='{{this._id}}'>{{this.name}}</option>
  {{/each_when}}
{{/'systems/animabf/templates/common/ui/custom-select.hbs'}}

{{#> 'systems/animabf/templates/common/ui/custom-select.hbs'
  title=(localize 'macros.combat.dialog.spellGrade.title')
  disabled=this.attackSent
  inputName='attacker.mystic.spellGrade'
}}
  <option {{#if (is "eq" this.attacker.mystic.spellGrade 'base')}}selected{{/if}} value='base'>{{localize 'macros.combat.dialog.spellGrade.base.title'}}</option>
  <option {{#if (is "eq" this.attacker.mystic.spellGrade 'intermediate')}}selected{{/if}} value='intermediate'>{{localize 'macros.combat.dialog.spellGrade.intermediate.title'}}</option>
  <option {{#if (is "eq" this.attacker.mystic.spellGrade 'advanced')}}selected{{/if}} value='advanced'>{{localize 'macros.combat.dialog.spellGrade.advanced.title'}}</option>
  <option {{#if (is "eq" this.attacker.mystic.spellGrade 'arcane')}}selected{{/if}} value='arcane'>{{localize 'macros.combat.dialog.spellGrade.arcane.title'}}</option>
{{/'systems/animabf/templates/common/ui/custom-select.hbs'}}

{{> 'systems/animabf/templates/common/ui/custom-select-choices.hbs'
  disabled=this.attackSent
  choices=config.iterables.combat.weapon.criticTypesWithNone
  title=(localize "macros.combat.dialog.weapon.critic.title")
  inputName='attacker.mystic.critic'
  inputValue=this.attacker.mystic.critic
}}

{{>
"systems/animabf/templates/common/ui/horizontal-titled-input.hbs"
  title=(localize "macros.combat.dialog.damage.title")
  disabled=this.attackSent
  inputName="attacker.mystic.damage.special"
  inputValue=this.attacker.mystic.damage.special
  hasSecondaryInput=true
  disableSecondaryInput=true
  secondaryInputName="attacker.mystic.damage.final"
  secondaryInputValue=attacker.mystic.damage.final
}}


{{#if (is 'eq' this.attacker.mystic.distance.enable false)}}
<div class='columns'>
  <div>
    {{>
      "systems/animabf/templates/common/ui/horizontal-titled-input.hbs"
      title=(localize 'macros.combat.dialog.distance.title')
      inputType="checkbox"
      inputName="attacker.mystic.distance.check"
      inputValue=(is 'eq' this.attacker.mystic.distance.check true)
    }}
  </div>
</div>
{{/if}}

{{#if this.attacker.mystic.spellCasting.spell.innate}}
<div class='columns'>
  <div>
    {{>
    "systems/animabf/templates/common/ui/horizontal-titled-input.hbs"
    title=(localize 'macros.combat.dialog.castInnate.title')
    disabled=this.attackSent
    inputType="checkbox"
    inputName="attacker.mystic.spellCasting.cast.innate"
    inputValue=(is 'eq' this.attacker.mystic.spellCasting.cast.innate true)
    }}
  </div>
</div>
{{/if}}

{{#if this.attacker.mystic.spellCasting.spell.prepared}}
<div class='columns'>
  <div>
    {{>
    "systems/animabf/templates/common/ui/horizontal-titled-input.hbs"
    title=(localize 'macros.combat.dialog.castPrepared.title')
    disabled=this.attackSent
    inputType="checkbox"
    inputName="attacker.mystic.spellCasting.cast.prepared"
    inputValue=(is 'eq' this.attacker.mystic.spellCasting.cast.prepared true)
    }}
  </div>
</div>
{{/if}}

{{#if this.attacker.mystic.spellCasting.override.ui}}
<hr class='hr'/>
<div class='columns'>
  <div>
    {{>
    "systems/animabf/templates/common/ui/horizontal-titled-input.hbs"
    title=(localize 'macros.combat.dialog.castOverride.title')
    disabled=this.attackSent
    inputType="checkbox"
    inputName="attacker.mystic.spellCasting.override.value"
    inputValue=(is 'eq' this.attacker.mystic.spellCasting.override.value true)
    }}
  </div>
</div>
{{/if}}

{{#if this.attackSent}}
  <div class='mystic-attack-sent'>
    {{>'systems/animabf/templates/common/ui/loading-indicator.hbs' class="big"}}
    <p class='label'>
      {{localize 'macros.combat.dialog.attackSent.title'}}
    </p>
  </div>
{{else}}
  <button class='abf-button send-mystic-attack'>
    {{localize 'macros.combat.dialog.attackButton.title'}}
  </button>
{{/if}}
