<form class='{{cssClass}} {{#if this.allowed}}allowed{{/if}}' autocomplete='off'>
  {{#> "systems/animabf/templates/common/ui/group.hbs"
    class="attack-values"
  }}
    {{>
    "systems/animabf/templates/common/ui/group-header.hbs"
      title=(concat (localize 'macros.combat.dialog.attacking.title') this.defender.token.name)
    }}
    {{#> "systems/animabf/templates/common/ui/group-body.hbs"
      class="attack-values"
    }}
      {{#if this.allowed}}
        <nav class="abf-tabs sheet-tabs tabs" data-group="primary">
          <a class="item" data-tab="combat">{{localize "anima.ui.tabs.combat"}}</a>
          {{#if (is 'gt' this.attacker.actor.system.mystic.spells.length 0)}}<a class="item" data-tab="mystic">{{localize "anima.ui.tabs.mystic"}}</a>{{/if}}
          {{#if (is 'gt' this.attacker.actor.system.psychic.psychicPowers.length 0)}}<a class="item" data-tab="psychic">{{localize "anima.ui.tabs.psychic"}}</a>{{/if}}
        </nav>

      <div class='columns'>
        <div>
          {{>
              "systems/animabf/templates/common/ui/horizontal-titled-input.hbs"
              title=(localize 'macros.combat.dialog.noRoll.title')
              inputType="checkbox"
              inputName="attacker.withoutRoll"
              inputValue=(is 'eq' this.attacker.withoutRoll true)
          }}
        </div>
        <div>
          {{#if this.ui.isGM}}
            {{>
            "systems/animabf/templates/common/ui/horizontal-titled-input.hbs"
              title=(localize 'macros.combat.dialog.showRoll.title')
              disabled=this.attackSent
              inputType="checkbox"
              inputName="attacker.showRoll"
              inputValue=(is 'eq' this.attacker.showRoll true)
            }}
          {{/if}}
        </div>
      </div>

        {{#if this.attacker.counterAttackBonus}}
          {{>
          "systems/animabf/templates/common/ui/horizontal-titled-input.hbs"
            title=(localize 'macros.combat.dialog.counterAttackBonus.title')
            disabled=true
            inputValue=this.attacker.counterAttackBonus
          }}
        {{/if}}

        <section class="sheet-body">
          <div class="tab combat" data-group="primary" data-tab="combat">
            {{> 'systems/animabf/templates/dialog/combat/combat-attack/parts/combat.hbs' this=this}}
          </div>

          <div class="tab mystic" data-group="primary" data-tab="mystic">
            {{> 'systems/animabf/templates/dialog/combat/combat-attack/parts/mystic.hbs' this=this}}
          </div>

          <div class="tab psychic" data-group="primary" data-tab="psychic">
            {{> 'systems/animabf/templates/dialog/combat/combat-attack/parts/psychic.hbs' this=this}}
          </div>
        </section>
      {{else}}
        <div class='waiting-row'>
          {{>'systems/animabf/templates/common/ui/loading-indicator.hbs' class="big"}}
          <p class='label'>{{localize 'macros.combat.dialog.waitRequest.title'}}</p>
        </div>
      {{/if}}
    {{/"systems/animabf/templates/common/ui/group-body.hbs"}}
  {{/"systems/animabf/templates/common/ui/group.hbs"}}
</form>
