{{#> "systems/animabf/templates/common/ui/group.hbs"
  class="ammo"
}}
  {{>
  "systems/animabf/templates/common/ui/group-header.hbs"
    title=(localize "anima.ui.combat.ammo.title")
    addRowButtonData="add-ammo"
  }}
  {{#> "systems/animabf/templates/common/ui/group-body.hbs"
    class="ammo"
  }}
    {{#each system.combat.ammo as |ammo index|}}
      <div data-item-id='{{ammo._id}}' class='ammo-row'>
        {{>
        "systems/animabf/templates/common/ui/vertical-titled-input.hbs"
          class="name"
          title=(localize "anima.ui.combat.ammo.name.title")
          hideTitle=(is "gt" index 0)
          inputType="text"
          inputName=(concat "system.dynamic.ammo." ammo._id ".name")
          inputValue=ammo.name
        }}
        {{>
        'systems/animabf/templates/common/domain/select-quality.hbs'
          class="quality"
          title=(localize "anima.ui.combat.ammo.quality.title")
          hideTitle=(is "gt" index 0)
          isVertical=true
          inputName=(concat "system.dynamic.ammo." ammo._id ".system.quality.value")
          inputValue=ammo.system.quality.value
        }}
        {{>
        "systems/animabf/templates/common/ui/vertical-titled-input.hbs"
          class="presence"
          title=(localize "anima.ui.combat.ammo.presence.title")
          hideTitle=(is "gt" index 0)
          disabled=true
          inputName=(concat "system.dynamic.ammo." ammo._id ".system.presence.final.value")
          inputValue=ammo.system.presence.final.value
        }}
        {{>
        "systems/animabf/templates/common/ui/vertical-titled-input.hbs"
          class="damage"
          title=(localize "anima.ui.combat.ammo.damage.title")
          hideTitle=(is "gt" index 0)
          disabled=true
          inputName=(concat "system.dynamic.ammo." ammo._id ".system.damage.final.value")
          inputValue=ammo.system.damage.final.value
        }}
        {{>
        "systems/animabf/templates/common/ui/vertical-titled-input.hbs"
          class="breaking"
          title=(localize "anima.ui.combat.ammo.breaking.title")
          hideTitle=(is "gt" index 0)
          disabled=true
          inputName=(concat "system.dynamic.ammo." ammo._id ".system.breaking.final.value")
          inputValue=ammo.system.breaking.final.value
        }}
        {{>
        "systems/animabf/templates/common/ui/vertical-titled-input.hbs"
          class="integrity"
          title=(localize "anima.ui.combat.ammo.integrity.title")
          hideTitle=(is "gt" index 0)
          disabled=true
          inputName=(concat "system.dynamic.ammo." ammo._id ".system.integrity.final.value")
          inputValue=ammo.system.integrity.final.value
        }}
        {{>
        "systems/animabf/templates/common/ui/vertical-titled-input.hbs"
          class="amount"
          title=(localize "anima.ui.combat.ammo.amount.title")
          hideTitle=(is "gt" index 0)
          inputName=(concat "system.dynamic.ammo." ammo._id ".system.amount.value")
          inputValue=ammo.system.amount.value
        }}
      </div>
    {{/each}}
  {{/"systems/animabf/templates/common/ui/group-body.hbs"}}
{{/"systems/animabf/templates/common/ui/group.hbs"}}
