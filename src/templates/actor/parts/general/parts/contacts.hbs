{{#> "systems/animabf/templates/common/ui/group.hbs"
  class="contacts"
}}
  {{>
  "systems/animabf/templates/common/ui/group-header.hbs"
    title=(localize 'anima.ui.contactSection.title')
    addRowButtonData="add-contact"
  }}
  {{#> "systems/animabf/templates/common/ui/group-body.hbs"
    class="contacts"
  }}
    {{#each system.general.contacts as |contact index|}}
      <div data-item-id='{{contact._id}}' class='contact-row'>
        {{>
        "systems/animabf/templates/common/ui/vertical-titled-input.hbs"
          class="name"
          title=(localize 'anima.ui.contactSection.contactRow.name')
          hideTitle=(is "gt" index 0)
          inputType="text"
          inputName=(concat "system.dynamic.contacts." contact._id ".name")
          inputValue=contact.name
        }}
        {{>
        "systems/animabf/templates/common/ui/vertical-titled-input.hbs"
          class="description"
          title=(localize 'anima.ui.contactSection.contactRow.description')
          hideTitle=(is "gt" index 0)
          inputType="text"
          inputName=(concat "system.dynamic.contacts." contact._id ".system.description.value")
          inputValue=contact.system.description.value
        }}
      </div>
    {{/each}}
  {{/"systems/animabf/templates/common/ui/group-body.hbs"}}
{{/"systems/animabf/templates/common/ui/group.hbs"}}
