{{#> "systems/abf/templates/common/ui/group.hbs"
  class="experience"
}}
  {{>
  "systems/abf/templates/common/ui/group-header.hbs"
    title=(localize 'anima.ui.experienceSection.title')
  }}
  {{#> "systems/abf/templates/common/ui/group-body.hbs"
    class="experience"
  }}
    <div class='experience-bar'>
      <div
        class='current-experience'
        style='width: {{calculateExperience system.general.experience.current.value system.general.experience.next.value }}%;'
      ></div>
    </div>
    <div class='experience-values flex mt-1'>
      <input
        name='system.general.experience.current.value'
        type='number'
        class='input current-experience {{#is "gte" system.general.experience.current.value system.general.experience.next.value }}red{{/is}}'
        value='{{system.general.experience.current.value}}'
      />
      /
      <input
        name='system.general.experience.next.value'
        type='number'
        class='input next-experience'
        value='{{system.general.experience.next.value}}'
      />
    </div>
  {{/"systems/abf/templates/common/ui/group-body.hbs"}}
{{/"systems/abf/templates/common/ui/group.hbs"}}
