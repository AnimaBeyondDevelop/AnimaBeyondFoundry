{{#> "systems/animabf/templates/common/ui/group.hbs"
  class="spell-maintenances"
}}
  {{>
  "systems/animabf/templates/common/ui/group-header.hbs"
    title=(localize "anima.ui.mystic.spellMaintenance.title")
    addRowButtonData="add-spell-maintenance"
  }}
  {{#> "systems/animabf/templates/common/ui/group-body.hbs"
    class="spell-maintenances"
  }}
    {{#each system.mystic.spellMaintenances as |spellMaintenance index|}}
      <div data-item-id='{{spellMaintenance._id}}' class='spell-maintenance-row'>
        {{>
        "systems/animabf/templates/common/ui/vertical-titled-input.hbs"
          class="name"
          title=(localize "anima.ui.mystic.spellMaintenance.name.title")
          hideTitle=(is "gt" index 0)
          inputType="text"
          inputName=(concat "system.dynamic.spellMaintenances." spellMaintenance._id ".name")
          inputValue=spellMaintenance.name
        }}
        {{>
        "systems/animabf/templates/common/ui/vertical-titled-input.hbs"
          class="cost"
          title=(localize "anima.ui.mystic.spellMaintenance.cost.title")
          hideTitle=(is "gt" index 0)
          inputName=(concat "system.dynamic.spellMaintenances." spellMaintenance._id ".system.cost.value")
          inputValue=spellMaintenance.system.cost.value
        }}
      </div>
    {{/each}}
  {{/"systems/animabf/templates/common/ui/group-body.hbs"}}
{{/"systems/animabf/templates/common/ui/group.hbs"}}
