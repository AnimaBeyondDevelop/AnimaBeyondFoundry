{{#> "systems/abf/templates/common/ui/group.hbs"
  class="act-vias"
}}
  {{>
  "systems/abf/templates/common/ui/group-header.hbs"
    title=(localize "anima.ui.mystic.act.title")
    addRowButtonData="add-act-via"
  }}
  {{#> "systems/abf/templates/common/ui/group-body.hbs"
    class="act-vias"
  }}
    {{>
    "systems/abf/templates/common/ui/horizontal-titled-input.hbs"
      class="main"
      title=(localize "anima.ui.mystic.act.main.title")
      inputName="system.mystic.act.main.base.value"
      inputValue=system.mystic.act.main.base.value
      hasSecondaryInput=true
      addTooltips=true
      disableSecondaryInput=true
      secondaryInputName="system.mystic.act.main.final.value"
      secondaryInputValue=system.mystic.act.main.final.value
    }}
    {{#each system.mystic.act.via as |actVia|}}
      <div data-item-id='{{this._id}}' class='act-via-row'>
        {{>
        "systems/abf/templates/common/ui/horizontal-titled-input.hbs"
          class="via"
          title=(localize (concat 'anima.ui.mystic.spell.via.' this.name '.title'))
          inputName=(concat "system.dynamic.via." this._id ".system.base.value")
          inputValue=this.system.base.value
          hasSecondaryInput=true
          addTooltips=true
          disableSecondaryInput=true
          secondaryInputName=(concat "system.dynamic.via." this._id ".system.final.value")
          secondaryInputValue=this.system.final.value
        }}
      </div>
    {{/each}}
  {{/"systems/abf/templates/common/ui/group-body.hbs"}}
{{/"systems/abf/templates/common/ui/group.hbs"}}
