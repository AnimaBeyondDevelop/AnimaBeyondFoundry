{{#> "systems/animabf/templates/common/ui/group.hbs"
  class="act"
}}
  {{>
  "systems/animabf/templates/common/ui/group-header.hbs"
    title=(localize "anima.ui.mystic.act.title")
  }}
  {{#> "systems/animabf/templates/common/ui/group-body.hbs"
    class="act"
  }}
    {{>
    "systems/animabf/templates/common/ui/horizontal-titled-input.hbs"
      class="main"
      title=(localize "anima.ui.mystic.act.main.title")
      inputName="data.mystic.act.main.base.value"
      inputValue=data.data.mystic.act.main.base.value
      hasSecondaryInput=true
      addTooltips=true
      disableSecondaryInput=true
      secondaryInputName="data.mystic.act.main.final.value"
      secondaryInputValue=data.data.mystic.act.main.final.value
    }}
    {{>
    "systems/animabf/templates/common/ui/horizontal-titled-input.hbs"
      class="alternative"
      title=(localize "anima.ui.mystic.act.alternative.title")
      inputName="data.mystic.act.alternative.base.value"
      inputValue=data.data.mystic.act.alternative.base.value
      hasSecondaryInput=true
      addTooltips=true
      disableSecondaryInput=true
      secondaryInputName="data.mystic.act.alternative.final.value"
      secondaryInputValue=data.data.mystic.act.alternative.final.value
    }}
  {{/"systems/animabf/templates/common/ui/group-body.hbs"}}
{{/"systems/animabf/templates/common/ui/group.hbs"}}