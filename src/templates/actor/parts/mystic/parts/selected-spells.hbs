{{#> "systems/animabf/templates/common/ui/group.hbs"
  class="selected-spells"
}}
  {{>
  "systems/animabf/templates/common/ui/group-header.hbs"
    title=(localize "anima.ui.mystic.selectedSpells.title")
    addRowButtonData="add-selected-spell"
  }}
  {{#> "systems/animabf/templates/common/ui/group-body.hbs"
    class="selected-spells"
  }}
    {{#each data.data.mystic.selectedSpells}}
      <div data-item-id='{{this._id}}' class='selected-spell-row'>
        {{>
        "systems/animabf/templates/common/ui/vertical-titled-input.hbs"
          class="name"
          title=(localize "anima.ui.mystic.selectedSpells.name.title")
          hideTitle=(is "gt" @index 0)
          inputType="text"
          inputName=(concat "data.dynamic.selectedSpells." this._id ".name")
          inputValue=this.name
        }}
        {{>
        "systems/animabf/templates/common/ui/vertical-titled-input.hbs"
          class="cost"
          title=(localize "anima.ui.mystic.selectedSpells.cost.title")
          hideTitle=(is "gt" @index 0)
          inputName=(concat "data.dynamic.selectedSpells." this._id ".data.cost.value")
          inputValue=this.data.cost.value
        }}
      </div>
    {{/each}}
  {{/"systems/animabf/templates/common/ui/group-body.hbs"}}
{{/"systems/animabf/templates/common/ui/group.hbs"}}