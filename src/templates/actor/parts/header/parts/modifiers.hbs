{{#> "systems/animabf/templates/common/ui/group.hbs"
  class="modifiers"
}}
  {{>
  "systems/animabf/templates/common/ui/group-header.hbs"
    title=(localize "anima.ui.general.modifiers.title")
  }}
  {{#> "systems/animabf/templates/common/ui/group-body.hbs"
    class="modifiers"
  }}
    <div class='first-row'>
      {{>
      "systems/animabf/templates/common/ui/vertical-titled-input.hbs"
        class="physical"
        title=(localize "anima.ui.general.modifiers.physicalActions.title")
        inputName="system.general.modifiers.physicalActions.value"
        inputValue=system.general.modifiers.physicalActions.value
      }}
      {{>
      "systems/animabf/templates/common/ui/vertical-titled-input.hbs"
        class="all-actions"
        title=(localize "anima.ui.general.modifiers.allActions.title")
        inputName="system.general.modifiers.allActions.base.value"
        inputValue=system.general.modifiers.allActions.base.value
        hasSecondaryInput=true
        disableSecondaryInput=true
        secondaryInputName="system.general.modifiers.allActions.final.value"
        secondaryInputValue=system.general.modifiers.allActions.final.value
      }}
      {{>
      "systems/animabf/templates/common/ui/vertical-titled-input.hbs"
        class="natural-penalty"
        disabled=true
        title=(localize 'anima.ui.general.naturalPenalty.title')
        inputValue=system.general.modifiers.naturalPenalty.byWearArmorRequirement.value
      }}
    </div>
  {{/"systems/animabf/templates/common/ui/group-body.hbs"}}
{{/"systems/animabf/templates/common/ui/group.hbs"}}
