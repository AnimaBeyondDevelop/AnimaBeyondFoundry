{{#> "systems/animabf/templates/common/ui/group.hbs"
  class="automationOptions"
}}
  {{>
  "systems/animabf/templates/common/ui/group-header.hbs"
    title=(localize "anima.ui.settings.automationOptions.title")
  }}
  {{#> "systems/animabf/templates/common/ui/group-body.hbs"
    class="automationOptions"
  }}
    {{>
      "systems/animabf/templates/common/ui/horizontal-titled-input.hbs"
        class="calculateFatigue"
        title= (localize "anima.ui.settings.automationOptions.calculateFatigueModifier.title")
        inputType="checkbox"
        inputName="system.automationOptions.calculateFatigueModifier"
        inputValue=system.automationOptions.calculateFatigueModifier
    }}
    {{>
      "systems/animabf/templates/common/ui/horizontal-titled-input.hbs"
        class="calculatePresence"
        title= (localize "anima.ui.settings.automationOptions.calculatePresence.title")
        inputType="checkbox"
        inputName="system.automationOptions.calculatePresence"
        inputValue=system.automationOptions.calculatePresence
    }}
    {{>
      "systems/animabf/templates/common/ui/horizontal-titled-input.hbs"
        class="calculateResistances"
        title= (localize "anima.ui.settings.automationOptions.calculateResistances.title")
        inputType="checkbox"
        inputName="system.automationOptions.calculateResistances"
        inputValue=system.automationOptions.calculateResistances
    }}
    {{>
      "systems/animabf/templates/common/ui/horizontal-titled-input.hbs"
        class="calculateSecondaries"
        title= (localize "anima.ui.settings.automationOptions.calculateSecondaries.title")
        inputType="checkbox"
        inputName="system.automationOptions.calculateSecondaries"
        inputValue=system.automationOptions.calculateSecondaries
    }}
  {{/"systems/animabf/templates/common/ui/group-body.hbs"}}
