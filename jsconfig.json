{
  "compilerOptions": {
    "lib": ["dom", "dom.iterable", "esnext"],
    "types": ["@types/jest", "@league-of-foundry-developers/foundry-vtt-types"],
    "paths": {
      "@module/*": ["./src/module/*"],
      "@assets/*": ["./src/assets/*"]
    },
    "module": "ES2022",
    "moduleResolution": "node", // This might conflict with foundry-vtt-types
    "resolveJsonModule": true,
    "esModuleInterop": true,
    "allowJs": true,
    "checkJs": true,
    "strict": true,
    "strictNullChecks": true,
    "skipLibCheck": true,
    "outDir": "dist"
  },
  "include": ["src"],
  "exclude": ["./**/.*.test.*", "./**/__mocks__", "node_modules"]
}
